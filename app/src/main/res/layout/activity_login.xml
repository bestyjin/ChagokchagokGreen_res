<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mainmennuline"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/mainmenuline" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:text="아이디 : "
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="240dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint=" "
        android:layout_marginTop="220dp"
        android:layout_marginLeft="120dp"
        android:textColor="#000000"
        android:id="@+id/loginid"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:text="비밀번호 : "
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="280dp"

        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="   "
        android:textColor="#000000"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="120dp"
        android:id="@+id/loginpw"  />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signupbtn_res"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/loginpw"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:id="@+id/btn1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loginbtn_res"
        android:layout_toRightOf="@+id/btn1"
        android:layout_below="@+id/loginpw"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:id="@+id/btn2" />
    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn2"
        android:text="아이디"
        android:id="@+id/testid"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/testid"
        android:text="비밀번호"
        android:id="@+id/testpw"/>-->

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:src="@drawable/belowbtn1_res"
        android:id="@+id/btn3"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/belowbtn2_res"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:id="@+id/btn4"
        />

</RelativeLayout>